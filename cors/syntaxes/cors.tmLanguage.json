{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CortexScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#reserved-words"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.cors",
				"match": "\\b(let|if|while|for|return|continue|break|else|elif|step|to|func|end|or|not)\\b"
			}]
		},
		"reserved-words": {
			"match": "\\b(math|table|os|task|cors)\\b",
			"name": "entity.name.function.member.cors"
		},
		"strings": {
			"name": "string.quoted.double.cors",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cors",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [{
				"name": "keyword.other.unit.suffix.integer.cors",
				"match": "(^-?[0-9][0-9\\.]+$)"
			}]
		},
		"expression": {
			"patterns": [
				{ "include": "#reserved-words" },
				{ "include": "#strings" },
				{ "include": "#numbers" },
				{ "include": "#paren-expression" }
			]
		},
		"paren-expression": {
			"patterns": [
				{
					"captures": {
						"1": {
							"name": "entity.name.function.cors"
						}
					},
					"match": "\\b(\\w+)(?:\\s+([-a-zA-Z0-9_]+))?\\s*(\\()",
					"name": "punctuation.definition.parameters.cors",
					"patterns": [{ "include": "#expression" }]
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "#\\!",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.cors"
						}
					},
					"end": "\\n",
					"name": "comment.line.number-sign.cors"
				}
			]
		}
	},
	"scopeName": "source.cors"
}